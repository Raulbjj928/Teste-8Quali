@model ClienteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="display-4">Deseja remover o Cliente (@Model.Nome) ?</h1>
    <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Clientes" role="button">Cancelar</a>
    <a  class="btn btn-dark" asp-action="Excluir" asp-controller="Clientes" asp-route-id="@Model.Id" role="button">Excluir</a>

</div>