@model List<ClienteModel>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="text-center">
    
    <h1 class="display-4">Lista de Clientes</h1>

    <table class="table" id="table-clientes">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Empresa</th>
                <th scope="col">E-mail Principal</th>
                <th scope="col">Telefone pessoal</th>
                <th scope="col">Telefone comercial</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(var cliente in Model)
                {
                    <tr>
                        <th scope="row">@cliente.Id</th>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Empresa</td>
                        <td>@cliente.EmailPricipal</td>
                        <td>@cliente.TelP</td>
                        <td>@cliente.TelC</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a role="button" class="btn btn-outline-secondary" btn-sm asp-action="Update" asp-route-id="@cliente.Id" asp-controller="Clientes">Editar</a>
                                <a type="button" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@cliente.Id" asp-controller="Clientes">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-dark" role="button" asp-controller="Clientes" asp-action="Create">Cadastrar Cliente</a>
    </div>
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.8/datatables.min.js"></script>
    
</div>